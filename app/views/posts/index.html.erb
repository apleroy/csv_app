<h1>Posts</h1>
<p>All posts from <a href="http://jsonplaceholder.typicode.com/posts" target="_blank">JSON Placeholder API - Posts</a></p>
<p><%= link_to 'Download CSV', posts_path(format: :csv) %></p>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>UserID</th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>

      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.userId %></td>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>

